}
.confirmPlay {
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: #3dbfe7;
  color: #fff;
}

.audioBox {
    width: 260rpx;
    height: 260rpx;
    line-height: 260rpx;
    text-align: center;
    border-radius: 50%;
    border: 4rpx solid #3dbfe7;
    position: absolute;
    top: 65%;
    left: 50%;
    margin-top: -130rpx;
    margin-left: -130rpx;
    font-size: 20rpx;
}
.dot{
    height: 130rpx;
    width: 130rpx;
    font-size: 24rpx;
    color: #fff;
    line-height: 130rpx;
    text-align: center;
    border-radius: 100%;
    position: absolute;
    top: 65rpx;
    left: 65rpx;
    animation: sploosh 1s cubic-bezier(0.165, 0.84, 0.44, 1);
    z-index: 10;
    animation-iteration-count:infinite;
    background: transparent;
}
.dot1 {
  height: 130rpx;
  width: 130rpx;
  font-size: 24rpx;
  color: #3dbfe7;
  line-height: 130rpx;
  text-align: center;
  position: absolute;
  top: 65rpx;
  left: 65rpx;
}
@keyframes sploosh {
  0% {
      box-shadow: 0 0 0 0rpx #3dbfe7;
      background: #3dbfe7;
  }
  100% {
      box-shadow: 0 0 0 30rpx #3dbfe7;
      background: #3dbfe7;
  }
}
